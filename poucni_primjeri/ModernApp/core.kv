

OverlayScreenManager:
    FirstScreen:
        canvas:
            Color:
                rgba: (0.5,0.5,0.5,0.5)
            Rectangle:
                source: "images/R.jpg"
                pos: self.pos
                size: self.size

        MDRelativeLayout:
            MDLabel:
                text: "Cookie \nCLICKER"
                halign: "center"
                pos_hint: {"center_x":0.5,"center_y":0.8}
                font_style: "H2"
                bold: True
            ImageButton:
                source: "images/cookie.png"
                pos_hint: {"center_x":0.5,"center_y":0.5}
                size_hint: 0.5,0.3
                on_press: root.cookie_clicked()


#File name: gender_selector_widget.kv

<GenderSelectorWidget>:
    size_hint: (1,1)
    pos_hint: {"center_x":0.5,"center_y":0.5}
    grey_container: app.primary_colors["darker_grey"]
    blue_container: app.primary_colors["light_blue"]
    OvalBlueButtonWidget:
        id: bm
        button_name: "male"
        type: "round"
        button_ripple: 0
        button_text: ""
        size_hint: (0.5,0.5)
        button_dims: (250,250)
        button_bg_color: root.grey_container
        pos_hint: {"center_x":0.5,"center_y":0.25}
        release_func: root.gender_selected
        MDIcon:
            id: icon_male
            pos_hint: {"center_x": 0.5, "center_y":0.6}
            font_size: 128
            icon: "gender-male"
            theme_icon_color: "Custom"
            color: app.primary_colors["white"]
        MDLabel:
            id: label_male
            text: "Male"
            halign: "center"
            font_name: app.fonts["sans_regular"]
            pos_hint: {"center_x": 0.5, "center_y":0.25}


    OvalBlueButtonWidget:
        id: bf
        button_name: "female"
        type: "round"
        selected: 0
        button_ripple: 0
        button_text: ""
        button_bg_color: app.primary_colors["darker_grey"]
        size_hint: (0.5,0.5)
        button_dims: (250,250)
        pos_hint: {"center_x":0.5,"center_y":0.75}
        release_func: root.gender_selected
        MDIcon:
            id: icon_female
            pos_hint: {"center_x": 0.5, "center_y":0.6}
            font_size: 128
            icon: "gender-female"
            theme_icon_color: "Custom"
            icon_color: app.primary_colors["black"]
        MDLabel:
            id: label_female
            text: "Female"
            halign: "center"
            font_name: app.fonts["sans_regular"]
            pos_hint: {"center_x": 0.5, "center_y":0.25}
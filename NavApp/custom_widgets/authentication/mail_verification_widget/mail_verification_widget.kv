#File name: mail_verification_widget.kv

<MailVerificationWidget>:
    size_hint: (1,1)
    pos_hint: {"center_x":0.5,"center_y":0.5}
    grey_container: app.primary_colors["darker_grey"]
    blue_container: app.primary_colors["light_blue"]
    release_func: root.send_to_email
    MDLabel:
        font_name: app.fonts["sans_semi_bold"]
        color: app.primary_colors["error_color"]
        font_size: dp(18)
        text: "Molimo potvrdite svoj e-mail preko poruke koju ste dobili u Va≈° inbox."
        halign: "center"
        pos_hint: {"center_x":0.5,"center_y":0.8}
    MDIconButton:
        icon: "gmail"
        icon_color: app.primary_colors["light_blue"]
        icon_size: "256dp"
        ripple_alpha: 0
        on_release: root.release_func(self)
        pos_hint:  {'center_x': 0.5, 'center_y': 0.5}
    MDLabel:
        font_name: app.fonts["sans_regular"]
        font_size: "18dp"
        text: "Odvedi me na email (pritiskom na ikonu iznad)"
        color: app.primary_colors["light_blue"]
        halign: "center"
        pos_hint: {"center_x":0.5,"center_y":0.27}

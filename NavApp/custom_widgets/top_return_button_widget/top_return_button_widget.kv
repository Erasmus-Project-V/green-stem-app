<TopReturnButtonWidget>:
    size_hint: (0.1,0.1)
    md_bg_color: (1,1,1,0)
    pos_hint: {"center_y":0.9,"center_x":0.1}
    release_func: root.placeholder
    icn_size: dp(64)
    icn_direction: "left"
    MDIconButton:
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        icon: "chevron-left" if root.icn_direction == "left" else "chevron-right"
        theme_icon_color: "Custom"
        icon_size: root.icn_size
        icon_color: app.primary_colors["white"]
        ripple_alpha: 0.01
    MDIconButton:
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        icon_size: root.icn_size
        ripple_alpha: 0.01
        icon: "chevron-left-circle" if root.icn_direction == "left" else "chevron-right-circle"
        theme_icon_color: "Custom"
        icon_color: app.primary_colors["black"]
        on_release: root.release_func(self)


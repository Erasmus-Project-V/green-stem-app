#:import utils kivy.utils

<OvalBlueButtonWidget>:
    type: "half"
    md_bg_color: (0,0,1,0)
    size_hint:(0.4,0.1) if root.type == "half" else (1,0.1)
    button_dims: (125*1.3,50*1.3) if root.type == "half" else (250*1.3,50*1.3)
    button_text: "Sample"
    button_bg_color: app.primary_colors["light_blue"]
    release_func: root.clicked
    button_name: "None"
    button_ripple: 1
    MDFillRoundFlatButton:
        id: btn_in
        ripple_alpha: 0.5 * root.button_ripple
        ripple_color: app.primary_colors["dark_grey"]
        style: "filled"
        md_bg_color: root.button_bg_color
        size: root.button_dims
        pos_hint: {"center_x":0.5,"center_y":0.5}
        name: root.button_name
        on_release:
            root.release_func(self)
    MDLabel:
        text: root.button_text
        pos_hint: {"center_x":0.45,"center_y":0.5} if root.type == "half" else root.center_pos
        color: app.primary_colors["black"]
        font_name: app.fonts["sans_semi_bold"]
        halign:"center"
    Image:
        source: "assets/images/chevron_right.png"
        pos_hint: {"center_x":0.7,"center_y":0.5}
        opacity: 0.7 if root.type == "half" else  0
        size_hint: (0.4,0.4)



#:import utils kivy.utils

<OvalBlueButtonWidget>:
    md_bg_color: (0,0,1,0)
    size_hint:(0.4,0.1)
    release_func: root.clicked
    MDFillRoundFlatButton:
        ripple_alpha: 0.5
        ripple_color: app.primary_colors["dark_grey"]
        style: "filled"
        md_bg_color: app.primary_colors["light_blue"]
        size: (125*1.3,50*1.3)
        pos_hint: {"center_x":0.5,"center_y":0.5}
        on_release:
            root.release_func(self)
    MDLabel:
        text: "Log in"
        pos_hint: {"center_x":0.45,"center_y":0.5}
        color: app.primary_colors["black"]
        font_name: app.fonts["sans_semi_bold"]
        halign:"center"
    Image:
        source: "assets/images/chevron_right.png"
        pos_hint: {"center_x":0.7,"center_y":0.5}
        opacity: 0.7
        size_hint: (0.4,0.4)



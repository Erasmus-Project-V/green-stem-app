#File name: friend_card_widget.kv

<FriendCardWidget>:
    size_hint: (None, None)
    size: (dp(340), dp(55))
    quantity_one: "1.Quantity"
    quantity_two: "2.Quantity"
    friend_name: "[Name]"
    img_path: "None"
    index_num: "None"
    canvas:
        Color:
            rgba: app.primary_colors["dark_grey"]
        RoundedRectangle:
            id: rounded_rectangle
            # pos: (dp(20), dp(310))  # Position the rectangle at the widget's position
            size: (root.width, root.height)
            radius: [60, 60, 60, 60]  # Set the radius of the corners

    MDLabel:
        text: root.index_num
        pos_hint: {"center_y":0.5}
        pos: (dp(25), dp(31))
        font_name: app.fonts["sans_semi_bold"]
        #font_size: dp(15)
        color: [1, 1, 1, 0.65]
        opacity: 1 if root.index_num != "None" else 0

    MDRelativeLayout:
        size_hint: None, None
        size: (dp(160), dp(55))
        pos_hint: {"center_x": 0.32, "center_y":0.5} if root.index_num == "None" else {"center_x": 0.40, "center_y":0.5}
        Image:
            source: root.img_path
            pos: (dp(-43), dp(8))
            size_hint: 0.75,0.75
            opacity: 1 if root.img_path != "None" else 0

        MDLabel:
            text: root.friend_name
            pos_hint: {"center_y":0.5}
            color: [1, 1, 1, 0.65]
            pos: (dp(52), dp(30)) if root.img_path != "None" else (dp(5), dp(30))

    MDLabel:
        text: root.quantity_one
        pos_hint: {"center_y":0.5}
        pos: (dp(130), dp(31))
        font_name: app.fonts["sans_semi_bold"]
        font_size: dp(15)
        color: app.primary_colors["light_blue"]

    MDLabel:
        text: root.quantity_two
        pos_hint: {"center_y":0.5}
        pos: (dp(250), dp(30))
        font_name: app.fonts["sans_semi_bold"]
        font_size: dp(15)
        color: app.primary_colors["light_blue"]

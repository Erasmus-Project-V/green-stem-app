#File name: activity_history_list_widget.kv

<ActivityHistoryListWidget>:
    size_hint: None, None
    width: dp(340)
    height: dp(450)
    Label:
        text: "History of activity"
        font_name: app.fonts["sans_semi_bold"]
        pos_hint: {"center_x":0.3,"center_y":0.95}
        font_size: dp(18)


    MDScrollView:
        id: scroll_view
        do_scroll_x: False
        do_scroll_y: True
        pos_hint: {"center_x":0.5,"center_y":0.4}
        size_hint: (None, None)
        size: (root.width, root.height)
        bar_width: 0
        always_overscroll: False
        MDBoxLayout:
            orientation: 'vertical'
            id: scrollable_activities
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(20)
#File name: activity_history_list_widget.kv

<ActivityHistoryListWidget>:
    size_hint: None, 1
    width: dp(340)
    md_bg_color: (1, 0, 0, 0.5)
    Label:
        text: "This is the future list"
        font_name: app.fonts["sans_semi_bold"]
        pos_hint: {"center_x":0.3,"center_y":0.95}
        font_size: dp(18    )

    MDScrollView:
        id: scroll_view
        do_scroll_x: True
        do_scroll_y: False
        pos_hint: {"center_x":0.5,"center_y":0.63}
        size_hint: (None, None)
        size: (root.width, root.height)
        bar_width: 0
        # scroll_x: (root.current_date/31)-(-9*10**(-5)*root.current_date**2 - 0.0024*root.current_date + 0.1159)
        # scroll_x: 0.44
        always_overscroll: False
        MDBoxLayout:
            id: scrollable_days
            size_hint_x: None
            width: self.minimum_width
            spacing: dp(20)
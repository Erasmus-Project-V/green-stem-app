#File name: calendar_widget.kv

<CalendarWidget>:
    blue_container: app.primary_colors["light_blue"]
    dark_gray_container: app.primary_colors["dark_grey"]
    size_hint: 1, None
    height: dp(120)

    MDBoxLayout:
        pos_hint: {"center_x":0.5,"center_y":0.8}
        size_hint: (None, None)
        size: (root.width, dp(30))
        # spacing: dp(90)
        padding: dp(40)

        TopReturnButtonWidget:
            id: previous_month
            icn_size: dp(30)
            pos_hint: {"center_y": 0.5}
            release_func: root.arrow_pressed

        MDLabel:
            padding: dp(70)
            id: month_year
            halign: "center"
            text: "Month Year"
            pos_hint: {"center_y": 0.5}

        TopReturnButtonWidget:
            id: next_month
            icn_size: dp(30)
            pos_hint: {"center_x":0.5, "center_y": 0.5}
            icn_direction: "right"
            release_func: root.arrow_pressed


    MDScrollView:
        id: scroll_view
        do_scroll_x: True
        do_scroll_y: False
        pos_hint: {"center_x":0.5,"center_y":0.4}
        size_hint: (None, None)
        size: (root.width, dp(70))
        bar_width: 0
        always_overscroll: False
        MDBoxLayout:
            id: scrollable_days
            size_hint_x: None
            width: self.minimum_width
            spacing: dp(20)

#File name: calendar_widget.kv

<CalendarWidget>:
    blue_container: app.primary_colors["light_blue"]
    dark_gray_container: app.primary_colors["dark_grey"]
    size_hint: 1, None
    height: dp(200)
    canvas:
        Color:
            rgba: app.primary_colors["dark_grey"]
        RoundedRectangle:
            pos: (0, root.height - (root.height - dp(70)))  # Position the rectangle at the widget's position
            size: (root.width, root.height - dp(70))  # Set the rectangle size to the widget's size
            radius: [0, 0, 20, 20]  # Set the radius of the corners

    MDBoxLayout:
        pos_hint: {"center_x":0.5,"center_y":0.9}
        size_hint: (None, None)
        size: (root.width, dp(60))
        spacing: dp(15)
        Button:
            id: previous_month
            name: previous_month
            text: "<"
            background_color: (0, 0, 0, 0)
            on_press: root.arrow_pressed(self)
            halign: "center"
            valign: "middle"

        MDLabel:
            id: month_year
            text: "Month Year"

        Button:
            id: next_month
            name: next_month
            text: ">"
            background_color: (0, 0, 0, 0)
            on_press: root.arrow_pressed(self)


    MDScrollView:
        do_scroll_x: True
        do_scroll_y: False
        pos_hint: {"center_x":0.5,"center_y":0.63}
        size_hint: (None, None)
        size: (root.width, dp(100))
        bar_width: 0
        MDBoxLayout:
            id: scrollable_days
            size_hint_x: None
            width: self.minimum_width
            spacing: dp(20)

#File name: activity_history_card_widget.kv

<ActivityHistoryCardWidget>:
    activity_name: "Define activity"
    activity_time: "--:--"
    img_path: "assets/images/sample_profile_picture.png"
    size_hint: None, None
    is_icon_image: False
    size: (dp(340), dp(73))
    pos_hint: {"center_x":0.5,"center_y":0.5}
    activity_card_function: root.activity_card_pressed
    canvas:
        Color:
            rgba: app.primary_colors["dark_grey"]
        RoundedRectangle:
            pos: (0, 0)  # Position the rectangle at the widget's position
            size: (root.width, root.height)  # Set the rectangle size to the widget's size
            radius: [20, 20, 20, 20]  # Set the radius of the corners

    Button:
        size: root.size
        background_color: [0, 0, 0, 0]
        background_normal: ''
        background_down: ''
        on_press: root.activity_card_function(root.activity_name, root.activity_time, root.activity_data)

    MDRelativeLayout:
        pos_hint: {"center_x":0.55,"center_y":0.5}
        MDLabel:
            font_name: app.fonts["sans_semi_bold"]
            text: root.activity_name
            halign: "left"
            pos_hint: {"center_y": 0.7}

        MDLabel:
            text: root.activity_time
            font_name: app.fonts["sans_semi_bold"]
            color: app.primary_colors["light_blue"]
            font_size: dp(13)
            halign: "left"
            pos_hint: {"center_y": 0.35}

    MDRelativeLayout:
        size_hint: None, None
        size: (dp(67.6), dp(67.8)) if root.is_icon_image == False else ((dp(28.6), dp(28.8)))
        # md_bg_color: (0, 1, 0, 0.4)
        pos_hint: {"center_x":0.89,"center_y":0.5}
        FitImage:
            size_hint:  1, 1
            fit_mode: "fill"
            opacity: 0.7 if root.is_icon_image == False else 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            source: root.img_path
            radius: [20, 20, 20, 20]
#:import utils kivy.utils
#File name: pause_play_button_widget.kv


<QuantityDisplayWidget>:
    dimension: "medium"
    size_hint: None, None
    size: (dp(250),dp(200)) if root.dimension == "medium" else (dp(170),dp(140))
    pos_hint: {"center_x":0.5,"center_y":0.5}

    Image:
        size_hint: 1, 1
        fit_mode: "fill"
        opacity: .5
        color: app.primary_colors["light_grey"]
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        source: "assets/images/quantity_display_background.png"

    MDLabel:
        pos_hint: {"center_x":0.5,"center_y":0.63}
        text: root.quantity
        halign: "center"
        font_name: app.fonts["sans_semi_bold"]
        color: app.primary_colors["light_blue"]
        font_size: dp(60) if root.dimension == "medium" else dp(30)

    MDLabel:
        pos_hint: {"center_x":0.5,"center_y":0.38}
        halign: "center"
        text: root.title
        font_name: app.fonts["sans_semi_bold"]
        font_size: dp(20) if root.dimension == "medium" else dp(20)
        color: app.primary_colors["light_grey"]
#:import utils kivy.utils
#File name: pause_play_button_widget.kv

<QuantityDisplayWidget>:
    dimension: "medium"
    size_hint: None, None
    size: (dp(190*1.3),dp(149*1.3)) if root.dimension == "medium" else (dp(130*1.3),dp(112*1.3))
    pos_hint: {"center_x":0.5,"center_y":0.5}

    Image:
        size_hint: 1, 1
        allow_stretch: True
        color: (1, 1, 1, .1)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        source: "assets/images/quantity_display_background.png"

    Label:
        pos_hint: {"center_x":0.5,"center_y":0.7}
        text: root.quantity
        color: app.primary_colors["light_blue_opacity"]
        font_size: dp(55) if root.dimension == "medium" else dp(38)

    Label:
        pos_hint: {"center_x":0.5,"center_y":0.46}
        text: root.title
        font_size: dp(20) if root.dimension == "medium" else dp(18)
        color: (1, 1, 1, .5)
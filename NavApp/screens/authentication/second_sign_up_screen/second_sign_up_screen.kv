#File name: second_sign_up_screen.kv


<SecondSignUpScreen>:
    name: "sss"
    id: sss

    TopReturnButtonWidget:
        id: rtb
        opacity: 0.0
        release_func: root.prev_phase


    MDStackLayout:
        md_bg_color: (1,1,1,0)
        size_hint: (0.8,0.2)
        pos_hint: {"center_x":0.5,"center_y":0.825}
        MDLabel:
            size_hint: (1,0.25)
            text: "Podaci koje samo ti vidiš"
            halign: "center"
            font_size: dp(24)
            font_name: app.fonts["actor_regular"]
        MDLabel:
            size_hint: (1,0.3)
            text: "Kako bi bolje izračunali potrošnju kalorija"
            halign: "center"
            font_size: dp(18)
            font_name: app.fonts["advent_regular"]

    MDRelativeLayout:
        id: changeable
        size_hint: (0.6,0.6)
        pos_hint: {"center_x":0.5,"center_y":0.5}
        MDIcon:
            icon: "arrow-right-bold-outline"
            color: app.primary_colors["light_blue"]
            id: selector
            opacity: 0.0
            font_size: "64dp"
            pos_hint: {"center_x":0.125,"center_y":0.45}
            size_hint: (0.45,0.45)
        MDLabel:
            id: desc_text
            opacity: 0.0
            text: "Null"
            pos_hint: {"center_x":0.5,"center_y":0.7}
            font_size: dp(60)
            halign: "center"
            font_name:  app.fonts["sans_semi_bold"]
            color: app.primary_colors["light_grey"]
        MDLabel:
            id: side_text
            opacity: 1.0
            text: "Age"
            pos_hint: {"center_x":0.875,"center_y":0.45}
            font_size: dp(30)
            halign: "center"
            font_name:  app.fonts["actor_regular"]
            color: app.primary_colors["light_grey"]



    OvalBlueButtonWidget:
        id: progress_button
        pos_hint: {"center_x":0.75,"center_y":0.075}
        button_text: "Dalje"
        release_func: root.next_phase

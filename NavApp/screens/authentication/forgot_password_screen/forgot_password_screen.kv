#File name: forgot_password_screen.kv


<ForgotPasswordScreen>:
    name: "fgp"
    id: fgp
    actor_font: app.fonts["actor_regular"]

    TopReturnButtonWidget:
        id: top_return_button
        release_func: root.prev_phase

    MDRelativeLayout:
        id: top_layout
        top_opacity: 1.0
        pos_hint: {"center_x": 0.5, "center_y":0.8}
        size_hint: (0.9, 0.2)
        MDLabel:
            id: top_title
            text: "null"
            opacity: top_layout.top_opacity
            halign: 'left'
            font_size: dp(24)
            font: app.fonts["actor_regular"]
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}

        MDLabel:
            id: top_desc
            text: "null"
            opacity: top_layout.top_opacity
            halign: 'left'
            font_size: dp(18)
            font_name: app.fonts["advent_regular"]
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
    
    MDRelativeLayout:
        id: middle_layout
        pos_hint: {"center_x": 0.5, "center_y":0.6}
        size_hint: (0.9, 0.3)


    MDRelativeLayout:
        id: bottom_layout
        pos_hint: {"center_x": 0.5, "center_y":0.4}
        size_hint: (0.95, 0.2)
        MDLabel:
            text: "None"
            id: bottom_helper_text
            halign: "center"
            color: app.primary_colors["light_blue"]
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        OvalBlueButtonWidget:
            id: bottom_button
            button_text: "Send"
            type: "full"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: (1,0.1)
            release_func: root.next_phase


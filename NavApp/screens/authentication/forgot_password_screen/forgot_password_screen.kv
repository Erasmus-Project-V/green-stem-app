#File name: forgot_password_screen.kv


<ForgotPasswordScreen>:
    name: "fgp"
    id: fgp

    TopReturnButtonWidget:
        id: top_return_button

    MDRelativeLayout:
        id: top_layout
        pos_hint: {"center_x": 0.5, "center_y":0.8}
        size_hint: (0.95, 0.2)
        Label:
            text: "Forgot password?"
            halign: 'left'
            id: title_label
            font_size: dp(25)
            pos_hint: {'center_x': 0.3, 'center_y': 0.7}

        Label:
            text: "Enter your email address"
            halign: 'left'
            id: subtitle_label
            font_size: dp(15)
            pos_hint: {'center_x': 0.25, 'center_y': 0.5}
    
    MDRelativeLayout:
        id: middle_layout
        pos_hint: {"center_x": 0.5, "center_y":0.6}
        size_hint: (0.95, 0.2)
        CodeEntryWidget:
            opacity: 1
            id: code_entry_widget
        InputWidget:
            name: "password"
            pos_hint: {'center_x': 0.5, 'center_y': 0.83}
            id: new_password_text
            placeholder_text: "New password"
            is_password: True
            opacity: 0
        
        InputWidget:
            name: "password"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            id: confirm_new_password_text
            placeholder_text: "Confirm new password"
            is_password: True
            opacity: 0

    MDRelativeLayout:
        id: bottom_layout
        pos_hint: {"center_x": 0.5, "center_y":0.4}
        size_hint: (0.95, 0.2)
        Label:
            text: "Send code to my email address"
            id: button_title
            color: app.primary_colors["light_blue"]
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        OvalBlueButtonWidget:
            button_text: "Send"
            type: "full"
            id: blue_button
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: (1,0.1)
            release_func: root.submitt_clicked
            

#File name: sign_up_screen.kv


<SignUpScreen>:
    name: "sgn"
    id: sgn

    FitImage:
        source: "assets/images/sgnp_background.png"
        size_hint_y: 0.57 / app.ratio * 2.1
        size_hint_x: 1
        pos_hint: {"top": 1.05}

    TopMenuWidget:
        login: 0

    MDRelativeLayout:
        size_hint: (0.85,0.2)
        pos_hint: {"center_x":0.5,"center_y":0.275}
        MDStackLayout:
            padding: (0,0,0,0)
            spacing: (0,20)
            pos_hint: {"center_x":0.5,"center_y":1.25}
            InputWidget:
                id: new_user_name_text
                placeholder_text: "Username"
                size_hint: (1, 0.5)
                font_size: 20
            InputWidget:
                id: new_email_text
                placeholder_text: "Email"
                size_hint: (1, 0.5)
            InputWidget:
                id: new_password_text
                placeholder_text: "Lozinka"
                is_password: True
                size_hint: (1, 0.5)
            InputWidget:
                id: new_password_repeat_text
                placeholder_text: "Lozinka ponovno"
                is_password: True
                size_hint: (1, 0.5)

    OvalBlueButtonWidget:
        pos_hint: {"center_x":0.7,"center_y":0.075}
        release_func:
            root.create_new_user
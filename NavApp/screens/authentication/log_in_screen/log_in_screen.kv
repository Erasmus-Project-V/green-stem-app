#File name: log_in_screen.kv


<LogInScreen>:
    name: "lgn"
    id: lgn

    FitImage:
        source: "assets/images/auth_background.png"
        size_hint_y: 0.57 / app.ratio * 2.1
        size_hint_x: 1
        pos_hint: {"top": 1}

    TopMenuWidget:
        login: 1

    MDRelativeLayout:
        size_hint: (0.85,0.2)
        pos_hint: {"center_x":0.5,"center_y":0.275}
        MDStackLayout:
            padding: (0,0,0,0)
            spacing: (0,20)
            pos_hint: {"center_x":0.5,"center_y":0.5}
            InputWidget:
                id: email_text
                placeholder_text: " Username ili email"
            InputWidget:
                id: password_text
                placeholder_text: " Lozinka"
                is_password: True
        MDTextButton:
            text: "Zaboravili ste lozinku?"
            halign: "right"
            font_size: 15
            color: app.primary_colors["light_blue"]
            pos_hint: {"center_x":0.8,"center_y":-0.15}
            on_release:
                root.forgotten_password()

    OvalBlueButtonWidget:
        pos_hint: {"center_x":0.7,"center_y":0.075}
        button_text: "Log In"
        release_func:
            root.validate_login


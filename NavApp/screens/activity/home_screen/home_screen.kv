#File name: home_screen.kv


<HomeScreen>:
    name: "hme"
    id: hme
    MDRelativeLayout:
        id: swipeable_container
        size_hint: (1,0.9)
        md_bg_color: (0,0,0,0)
        pos_hint: {"center_x":0.5,"center_y":0.55}
        FitImage:
            id: second_image_container
            size_hint: (1.2,1)
            pos_hint: {"center_x":0.5,"center_y":0.5}
            source: root.current_image
        FitImage:
            id: first_image_container
            size_hint: (1.2,1)
            pos_hint: {"center_x":0.5,"center_y":0.5}
            source: root.current_image
        SwipeableImageWidget:
            size_hint: (1,0.2)
            id: swipe_image
            pos_hint: {"center_x":0.5,"center_y":0.18}
        MDLabel:
            id: top_text
            pos_hint: {"center_x":0.5,"center_y":0.9}
            halign: "center"
            text: "NULL"
            font_size: dp(20)
            font_name: app.fonts["sans_regular"]
            color: app.primary_colors["light_grey"]
        MDLabel:
            id: crosshair_left
            halign: "center"
            text: "|"
            font: app.fonts["actor_regular"]
            size_hint: (0.1,0.1)
            font_size: dp(40)
            opacity: .5
            pos_hint: {"center_x":1/3-.01,"center_y":0.185}
        MDLabel:
            id: crosshair_right
            halign: "center"
            text: "|"
            size_hint: (0.1,0.1)
            font_size: dp(40)
            opacity: .5
            font: app.fonts["advent_regular"]
            pos_hint: {"center_x":2/3+.01,"center_y":0.185}
    GestureSurface:
        id: gesture_catcher
        temporal_window: 1
        draw_timeout: 0
        line_width: 0
        max_strokes: 1
        size_hint: (1,1)
        pos_hint: {"center_x":0.5,"center_y":0.5}
    OvalBlueButtonWidget:
        id: start_button
        pos_hint: {"center_x":.5,"center_y":0.19}
        button_text: "START"
        release_func: root.start_activity_clicked
    BottomNavWidget:
        selected: 1
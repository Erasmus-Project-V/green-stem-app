#File name: activity_screen.kv


<ActivityScreen>:
    name: "act"
    id: act
    FitImage:
        id: image_container
        source: "assets/images/home/home_trcanje_1.png" ""
        size_hint: (1.2,1)
        opacity: .25
        pos_hint: {"center_x": 0.5,"center_y":0.5}

    MDRelativeLayout:
        size_hint: (1,1)
        pos_hint: {"center_x":0.5,"center_y":0.5}

        QuantityDisplayWidget:
            id: ac1
            title: "KM"
            quantity: "1.5"
            pos_hint: {"center_x":0.5,"center_y":0.825}
            dimension: "medium"

        QuantityDisplayWidget:
            id: ac2
            pos_hint: {"center_x":0.25,"center_y":0.55}
            dimension: "small"
            title: "TIME"
            quantity: "00:05:50"

        QuantityDisplayWidget:
            id: ac3
            pos_hint: {"center_x":0.75,"center_y":0.55}
            dimension: "small"
            title: "TEMPO"
            quantity: "3"

        QuantityDisplayWidget:
            id: ac4
            pos_hint: {"center_x":0.25,"center_y":0.32}
            dimension: "small"
            title: "CALORIES"
            quantity: "588"

        QuantityDisplayWidget:
            id: ac5
            pos_hint: {"center_x":0.75,"center_y":0.32}
            dimension: "small"

        PausePlayButtonWidget:
            id: play_button
            pos_hint: {"center_x":0.4,"center_y":0.1}
            button_type: "play"
            hold_func: root.placeholder
            release_func: root.button_released


        PausePlayButtonWidget:
            id: stop_button
            pos_hint: {"center_x":0.6,"center_y":0.1}
            button_type: "stop"
            hold_func: root.quit_activity
            release_func: root.finish_activity


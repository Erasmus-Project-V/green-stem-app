#File name: settings_screen.kv


<SettingsScreen>:
    name: "stg"
    id: stg
    md_bg_color: app.primary_colors["black"]
    blue_ref: app.primary_colors["light_blue"]
    TopReturnButtonWidget:
        release_func: root.return_to_profile
    MDLabel:
        pos_hint: {"center_x":0.5,"center_y":0.9}
        text: "Settings"
        font_size: "28dp"
        font_name: app.fonts["sans_bold"]
        halign: "center"
    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x":0.5,"center_y":0.7}
        # tri ikone, svaka je 0.08
        size_hint: (0.85,0.08 * 3)
        md_bg_color: (1,0,0,0)
        ProfileBarWidget:
            bar_text: "Notifications"
            release_func: root.open_notifications
        ProfileBarWidget:
            bar_text: "Personalization"
        ProfileBarWidget:
            bar_text: "About us"
            release_func: root.open_about_us
#File name: leaderboard_social_screen.kv

<LeaderboardSocialScreen>:
    name: "lss"
    md_bg_color: app.primary_colors["black"]
    id: lss
    MDTopAppBar:
        id: top_bar
        pos_hint: {"top": 1}
        title: "null"
        md_bg_color: app.primary_colors["dark_grey"]
        left_action_items: [["chevron-left", lambda x: root.goto_main_social_screen()]]

    MDScrollView:
        id: stat_scroller
        pos_hint: {"center_x":0.5,"center_y":0.52}
        size_hint: 1,.78
        bar_width: 0
        always_overscroll: False
        #smooth_scroll_end: 0
        #md_bg_color: (0, 1, 0, 0.3)
        MDStackLayout:
            id: ws
            md_bg_color: (1,0,0,0)
            id: scroller_child
            size_hint_y: None
            size_hint_x: 1
            spacing: (0,"10dp")
            MDRelativeLayout:
                # md_bg_color: (1, 1, 0, 0.3)
                MDRelativeLayout:
                    pos_hint: {"center_x":0.56,"center_y":0.67}
                    MDLabel:
                        text: "Total points"
                        font_size: dp(19)
                        font: app.fonts["sans_bold"]

                MDRelativeLayout:
                    pos_hint: {"center_x":0.56,"center_y":0.05}
                    MDLabel:
                        text: "How do points work?"
                        font_size: dp(15)
                        font: app.fonts["sans_bold"]
                        color: app.primary_colors["light_blue"]

            #FriendCardWidget:
            #    quantity_one: ""
            #    quantity_two: "5"
            #    friend_name: "josip320"
                #index_num: "5."
                #img_path: "assets/images/profile_icon.png"
    BottomNavWidget:
        selected: 3
#File name: leaderboard_social_screen.kv

<LeaderboardSocialScreen>:
    name: "lss"
    md_bg_color: app.primary_colors["black"]
    id: lss
    TopReturnButtonWidget:
        pos_hint: {"center_x":0.09,"center_y":0.955}
        release_func: root.goto_main_social_screen
    MDRelativeLayout:
        size_hint: (0.75,0.1)
        pos_hint: {"center_x":0.55,"center_y":0.98}
        InputWidget:
            id: friend_name
            placeholder_text: "Add a friend"
            is_search: True

    MDScrollView:
        id: stat_scroller
        pos_hint: {"center_x":0.5,"center_y":0.51}
        size_hint: 1,.78
        bar_width: 0
        always_overscroll: False
        #smooth_scroll_end: 0
        MDStackLayout:
            id: ws
            md_bg_color: (1,0,0,0)
            id: scroller_child
            size_hint_y: None
            size_hint_x: 1
            spacing: (0,"10dp")

            TitleSeparatorWidget:
                title_text: "LEADERBOARD"

            MDRelativeLayout:
                md_bg_color: (1, 0, 0, 0.3)
                pos_hint: {"center_x":0.5,"center_y":0.5}
                MDRelativeLayout:
                    pos_hint: {"center_x":0.55,"center_y":0.9}
                    MDLabel:
                        text: "Points"
                        font_size: dp(19)
    BottomNavWidget:
        selected: 3
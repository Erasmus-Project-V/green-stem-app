#File name: profile_edit_screen.kv


<ProfileEditScreen>:
    name: "pes"
    id: pes
    blue_container: app.primary_colors["light_blue"]
    sans_container: app.fonts["sans_semi_bold"]
    TopReturnButtonWidget:
        release_func: root.return_to_profile
    MDLabel:
        pos_hint: {"center_x":0.5,"center_y":0.9}
        text: "Edit Profile"
        font_size: "28dp"
        font_name: app.fonts["sans_bold"]
        halign: "center"
    MDBoxLayout:
        md_bg_color: (1,0,0,0)
        pos_hint: {"center_x":.5,"center_y":.4}
        size_hint: (.85,.4)
        orientation: "vertical"
        InputWidget:
            id: uname
            placeholder_text: "Username"
        InputWidget:
            id: age
            placeholder_text: "Age"
        InputWidget:
            id: weight
            placeholder_text: "Weight"
        InputWidget:
            id: height
            placeholder_text: "Height"
    OvalBlueButtonWidget:
        type: "full"
        button_disabled: True
        pos_hint: {"center_x":0.5,"center_y":0.1}
        button_text: "Save"
#File name: main_statistic_screen.kv

<MainStatisticScreen>:
    name: "mss"
    id: mss
    md_bg_color: app.primary_colors["black"]
    rectangle_radius: [20, 20, 20, 20]
    rectangle_pos: {"center_x":0.5,"center_y":0.5}
    MDRelativeLayout:
        pos_hint: root.rectangle_pos
        canvas:
            Color:
                rgba: app.primary_colors["dark_grey"]
            RoundedRectangle:
                id: rounded_rectangle
                pos: (0, root.height - dp(60))  # Position the rectangle at the widget's position
                size: (root.width, dp(230))
                radius: root.rectangle_radius  # Set the radius of the corners

    TopMenuWidget:
        widget_width: 1
        top_widgets: [["This week", root.change_state], ["Chosen day", root.change_state], ["This month", root.change_state]]
        selected: 0
        pos_hint: {"center_x":0.5,"center_y":0.965}


    MDRelativeLayout:
        id: changeable

    BottomNavWidget:
        selected: 2


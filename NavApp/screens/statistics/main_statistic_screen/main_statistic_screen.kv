#File name: main_statistic_screen.kv

<MainStatisticScreen>:
    name: "mss"
    id: mss
    rectangle_radius: [20, 20, 20, 20]
    rectangle_height: dp(100)
    canvas:
        Color:
            rgba: app.primary_colors["dark_grey"]
        RoundedRectangle:
            id: rounded_rectangle
            pos: (0, root.height - dp(60))  # Position the rectangle at the widget's position
            size: (root.width, dp(150))
            radius: root.rectangle_radius  # Set the radius of the corners

    TopMenuWidget:
        widget_width: 1
        top_widgets: [["This week", root.placeholder], ["Chosen day", root.build_chosen_day], ["This month", root.placeholder]]
        selected: 0
        pos_hint: {"center_x":0.5,"center_y":0.965}


    MDRelativeLayout:
        id: changeable

    BottomNavWidget:
        selected: 2

